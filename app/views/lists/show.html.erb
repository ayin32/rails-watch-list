<div class='text-center p-20'>
<h1> <%= @list.name %> </h1>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fit %>
</div>

<% @list.bookmarks.each do |bookmark| %>
  <div class="card-product">
    <p> <%= image_tag bookmark.movie.poster_url%> </p>
  <div class="card-product-infos">
      <h2> <%= bookmark.movie.title %> </h2>
  <p> <%= bookmark.movie.overview %> </p>
  <p> <%= bookmark.movie.rating %> </p>
  <p> <%= bookmark.comment %> </p>
  <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete bookmark from list?"} %>
</div>
</div>
<% end %>

<%= link_to "Create a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"  %>

<%= link_to "Return to all lists", lists_path, class: "btn btn-primary"  %>
